<div class="side-bar-header">
  <div class="header-name">
    <%= current_user.username %>さんログイン中
    <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %>
  </div>
</div>

<div class="side-bar-main">
  <div class="create-care_user">
    <%= link_to "＋　新規利用者登録", new_care_user_path%>
  </div>

    <% @care_users.each do |care_user|%>
    <div class="care_user">
      <%= link_to "#{care_user.name}さん", care_user_schedules_path(care_user) %></a>
    </div>
    <% end %>

    <div class="care_user_delete">
      <%= link_to "この利用者情報を削除", care_user_path(@care_user), method: :delete, data: {confirm: "今スケジュールを表示している利用者さんを削除してよろしいですか？"} %>
    </div>
        <div class="care_user_past">
      <%= link_to "過去1ヶ月の記録を見る", past_care_user_schedule_path(@care_user,id: 1) %>
    </div>
    <div class="care_user_back">
      <%= link_to "利用者選択へ戻る", root_path %>
    </div>
</div>

